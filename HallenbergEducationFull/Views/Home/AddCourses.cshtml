@model HallenbergEducationFull.Models.AddCourseViewModel;

@{
    ViewData["Title"] = "Skapa Kurs";
}


<form method="post" asp-action="AddCourses">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-primary pl-3">Lägg Till Kurs</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-5">Kursnamn</div>
                    <div class="col-5">Lärare</div>
                    <div class="col-2">Antal Timmar</div>
                </div>
                <div class="form-group row">
                    <div class="col-5">
                        <input class="form-control col-12" asp-for="CourseName" />
                        @Html.ValidationMessageFor(m => m.CourseName, null, new { @class = "immediate"})
                    </div>
                    <div class="col-5">
                        <select class="form-control col-12" asp-for="TeacherId" asp-items="@ViewBag.TypeDropDown">
                            <option selected>---Välj Lärare---</option>
                        </select>
                        @Html.ValidationMessageFor(m => m.TeacherId)
                    </div>
                    <div class="col-2">
                        <input class="form-control col-12" asp-for="Hours"/>
                        @Html.ValidationMessageFor(m => m.Hours)
                    </div>
                </div>
                <div class="form-group row pt-2">
                    <div class="col-6">
                        <input class="btn btn-primary w-50" type="submit" value="Lägg Till"/>
                    </div>
                    <div class="col-6 text-end">
                        <a class="btn btn-danger pull-right" asp-action="Index">Tillbaka</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
